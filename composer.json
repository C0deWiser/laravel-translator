{
    "name": "codewiser/polyglot",
    "description": "Localize Laravel applications",
    "keywords": ["gettext", "trans", "laravel", "localization", "i18n", "L10n", "parse"],
    "license": "MIT",
    "version": "0.2.3",
    "authors": [
        {
            "name": "pm",
            "email": "pm@101media.ru"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-gettext": "*",
        "ext-json": "*",
        "laravel/framework": "^8.0",
        "sepia/po-parser": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Codewiser\\Polyglot\\": "src"
        },
        "files" : [
            "src/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Codewiser\\Polyglot\\PolyglotServiceProvider"
            ]
        }
    }
}
